{
    "id": "com.swttt.airplay",
    "name": {
        "en": "Airplay Client"
    },
    "version": "0.0.1",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Bas Jansen",
        "email": "b@sjansen.email"
    },
    "category": "video",
    "description": {
        "en": "Airplay client for Homey",
        "nl": "Airplay client voor Homey"
    },
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
    "drivers": [{
        "id": "appletv",
        "name": {
            "en": "Apple tv"
        },
        "images": {
            "large": "./drivers/appletv/assets/images/large.jpg",
            "small": "./drivers/appletv/assets/images/small.jpg"
        },
        "class": "other",
        "capabilities": [],
        "pair": [{
            "id": "list_airplay",
            "template": "list_devices",
            "navigation": {
                "next": "add_airplay"
            }
        }, {
            "id": "add_airplay",
            "template": "add_devices"
        }]
    }, {
        "id": "kodi",
        "name": {
            "en": "Kodi"
        },
        "images": {
            "large": "./drivers/kodi/assets/images/large.jpg",
            "small": "./drivers/kodi/assets/images/small.jpg"
        },
        "class": "other",
        "capabilities": [],
        "pair": [{
            "id": "list_airplay",
            "template": "list_devices",
            "navigation": {
                "next": "add_airplay"
            }
        }, {
            "id": "add_airplay",
            "template": "add_devices"
        }]
    }],
    "flow": {
        "actions": [{
            "id": "castVideo",
            "title": {
                "en": "Cast a video URL",
                "nl": "Cast een video URL"
            },
            "fluidArgs": true,
            "args": [{
                "name": "appletv",
                "type": "device",
                "filter": "driver_uri=homey:app:com.swttt.airplay&driver_id=appletv"
            }, {
                "name": "url",
                "type": "text",
                "placeholder": {
                    "en": "URL"
                }
            }]
        }, {
            "id": "stopVideo",
            "title": {
                "en": "Stop playback",
                "nl": "Stop afspelen"
            },
            "fluidArgs": true,
            "args": [{
                "name": "appletv",
                "type": "device",
                "filter": "driver_uri=homey:app:com.swttt.airplay&driver_id=appletv"
            }]
        }, {
            "id": "castVideoKodi",
            "title": {
                "en": "Cast a video URL",
                "nl": "Cast een video URL"
            },
            "fluidArgs": true,
            "args": [{
                "name": "kodi",
                "type": "device",
                "filter": "driver_uri=homey:app:com.swttt.airplay&driver_id=kodi"
            }, {
                "name": "url",
                "type": "text",
                "placeholder": {
                    "en": "URL"
                }
            }]
        }, {
            "id": "stopVideoKodi",
            "title": {
                "en": "Stop playback",
                "nl": "Stop afspelen"
            },
            "fluidArgs": true,
            "args": [{
                "name": "kodi",
                "type": "device",
                "filter": "driver_uri=homey:app:com.swttt.airplay&driver_id=kodi"
            }]
        }]
    }
}
