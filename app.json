{
    "id": "com.swttt.airplay",
    "name": {
        "en": "Airplay Client"
    },
    "version": "0.0.1",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Bas Jansen",
        "email": "b@sjansen.email"
    },
    "drivers": [{
        "id": "airplay",
        "name": {
            "en": "Airplay"
        },
        "images": {
            "large": "./drivers/airplay/assets/images/large.jpg",
            "small": "./drivers/airplay/assets/images/small.jpg"
        },
        "class": "other",
        "capabilities": [],
        "pair": [{
            "id": "list_airplay",
            "template": "list_devices",
            "navigation": {
                "next": "add_airplay"
            }
        }, {
            "id": "add_airplay",
            "template": "add_devices"
        }]
    }],
    "flow": {
        "actions": [{
            "id": "castVideo",
            "title": {
                "en": "Cast a video URL",
                "nl": "Cast een video URL"
            },
            "fluidArgs": true,
            "args": [{
                "name": "airplay",
                "type": "device",
                "filter": "driver_uri=homey:app:com.swttt.airplay&driver_id=airplay"
            }, {
                "name": "url",
                "type": "text",
                "placeholder": {
                    "en": "URL"
                }
            }]
        }]
    }
}
